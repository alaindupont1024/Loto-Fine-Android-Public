<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.VisualiserListeLotsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_secondaire">
        </ImageView>
        <TextView
            android:id="@+id/visu_liste_lots_lbl_titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Visualisation de la liste des lots"
            android:textColor="@color/vert"
            android:textSize="@dimen/text_size"></TextView>
        <ListView
            android:id="@+id/visu_liste_lots_scroll_lots"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center">

            <Button
                android:id="@+id/visu_liste_lots_btn_ajouter_lot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:text="Ajouter un lot"
                android:backgroundTint="@color/violet"
                android:textColor="@color/vert"
                android:textSize="@dimen/text_size"></Button>

            <Button
                android:id="@+id/visu_liste_lots_btn_retour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texte_retour"
                android:backgroundTint="@color/violet"
                android:textColor="@color/vert"
                android:textSize="@dimen/text_size"></Button>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>