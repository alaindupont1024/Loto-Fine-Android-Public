<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/visualiser_liste_inscrits_adapter_nom_inscrit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="left"
                android:layout_marginLeft="50px"
                android:text="Nom : "
                android:textSize="@dimen/text_size"></TextView>
            <TextView
                android:id="@+id/visualiser_liste_inscrits_adapter_prenom_inscrit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="left"
                android:layout_marginLeft="50px"
                android:text="Prénom : "
                android:textSize="@dimen/text_size"></TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/visualiser_liste_inscrits_adapter_email_inscrit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50px"
            android:text="E-Mail : "
            android:textSize="@dimen/text_size"></TextView>
        <TextView
            android:id="@+id/visualiser_liste_inscrits_adapter_numtel_inscrit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50px"
            android:text="N° de téléphone : "
            android:textSize="@dimen/text_size"></TextView>
        <CheckBox
            android:id="@+id/visualiser_liste_inscrits_adapter_inscription_validee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50px"
            android:text="Inscription validée ?"
            android:textSize="@dimen/text_size"></CheckBox>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>